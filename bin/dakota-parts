#!/bin/bash
set -o errexit -o nounset -o pipefail

function build_dir_from_binary_dir() {
  binary_dir=$1
  dir=$(dirname $(dirname $binary_dir))
  name=$(basename $binary_dir)
  echo "$dir/dkt/$name"
}

binary_dir=$1
build_dir=$(build_dir_from_binary_dir $binary_dir)
parts="$build_dir/parts.txt"
shift

if [[ $# -eq 0 ]]; then
  echo $parts
else
  mkdir -p $(dirname $parts)
  cat /dev/null > $parts

  for arg in $@; do
    echo $arg >> $parts
  done
fi
