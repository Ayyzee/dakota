#!/bin/bash
set -o nounset -o errexit -o pipefail
source common.sh

rm -f config.mk
rm -f config.sh
rm -f src/config.hh
rm -f lib/dakota/compiler.json
rm -f lib/dakota/platform.json
rm -f lib/dakota/compiler-default-argument-promotions.json

if (( 0 == $# )); then
  exit
fi

sysname=$1
compiler=$2

source config-$sysname.sh

$LN $LNFLAGS config-$sysname.mk config.mk
$LN $LNFLAGS config-$sysname.sh config.sh

pushd src > /dev/null 2>&1
$LN $LNFLAGS config-$sysname.hh config.hh
popd > /dev/null 2>&1

pushd lib/dakota > /dev/null 2>&1
$LN $LNFLAGS platform-$sysname.json  platform.json
$LN $LNFLAGS compiler-$compiler.json compiler.json
popd > /dev/null 2>&1

make --no-print-directory --directory src/port/compiler-default-argument-promotions install
make --no-print-directory --directory src/port/compiler-default-argument-promotions clean
