# -*- mode: perl -*-
{
    'srcs' => [ # cmd-line
      '$(srcdir)/dakota-catalog.$(cc_ext)',
    ],
    'libs' => [ # cmd-line
      'libdl.$(so_ext)', # darwin: /usr/lib/libdl.dylib
    ],
    'include-dirs' => [ # cmd-line
      '$(srcdir)',
      '$(srcdir)/../include',
    ],
    'target' => '../bin/dakota-catalog', # cmd-line
