klass assoc-node {
  slots {
    slots-t*  next;
    intptr-t element;
  }
  method set-element(slots-t* slots, object-t element) -> object-t {
    *(cast(object-t*)(slots->element)) = element;
    return element;
  }
  method set-elements(slots-t* slots, object-t element) -> object-t {
    slots-t* node = slots;
    while (node != nullptr) {
      assoc-node::set-element(node, element);
      node = node->next;
    }
    return element;
  }
  method element?(const slots-t* slots) -> bool-t {
    bool-t state = false;
    if (slots->element != 0)
      state = true;
    return state;
  }
}
klass named-assoc-node-compare {
  slots (*)(const named-assoc-node-t*, const named-assoc-node-t*) -> cmp-t;
}
klass named-assoc-node {
  slots {
    symbol-t name;
    assoc-node-t* node;
  }
  method compare(const slots-t* s, const slots-t* other-s) -> cmp-t {
    assert(s != nullptr);
    assert(other-s != nullptr);
    cmp-t result = 0;
    if (s != other-s)
      result = symbol::compare(s->name, other-s->name);
    return result;
  }
