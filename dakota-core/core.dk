func dk-make-simple-klass(symbol-t name, symbol-t superkls-name, symbol-t kls-name) -> object-t {
  //fprintf(stderr, "%s(#%s, #%s, #%s)\n", __func__, name, superkls-name, kls-name);
  assert(name != nullptr);
  ssize-t num-kls-props = 1;
  if (superkls-name != nullptr)
    num-kls-props++;
  if (kls-name != nullptr)
    num-kls-props++;

  property-t*   kls-props = cast(property-t*)  dkt::alloc(ssizeof(property-t) * num-kls-props);
  named-info-t* kls-info =  cast(named-info-t*)dkt::alloc(ssizeof(named-info-t));

  // need to be sorted
  uint-t i = 0;
  if (kls-name != nullptr)
    kls-props[i++] = { .key = #klass-name,      .element = cast(intptr-t)kls-name     };
  kls-props[i++] =   { .key = #name,            .element = cast(intptr-t)name         };
  if (superkls-name != nullptr)
    kls-props[i++] = { .key = #superklass-name, .element = cast(intptr-t)superkls-name};

  *kls-info = { .next = nullptr, .count = num-kls-props, .elements = kls-props};
  object-t kls = dk-register-klass(kls-info);
  return kls;
}
