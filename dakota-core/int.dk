klass uintptr {
  superklass number;
  
  slots uintptr-t;

  const slots-t max = UINTPTR-MAX;

  method dump(object-t self) -> object-t {
    $dump(super);
    fprintf(stderr, "%p:%p { slots=\"%lu\" }\n",
            cast(ptr-t)self, cast(ptr-t)unbox(self), unbox(self));
    return self;
  }
}
klass sig-atomic {
  superklass number;
  
  slots sig-atomic-t;

  const slots-t max = SIG-ATOMIC-MAX;
  const slots-t min = SIG-ATOMIC-MIN;

  method init(object-t self, slots-t slots: 0) -> object-t {
    self = $init(super);
    mutable-unbox(self) = slots;
    return self;
  }
}
