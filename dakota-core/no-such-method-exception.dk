# include <cassert>

module dakota-core;

klass output-stream;

klass no-such-method-exception {
  superklass exception;

  slots {
    object-t           object;
    object-t           klass;
    const signature-t* signature;
  }
  method init(object-t           self,
              object-t           object:    nullptr,
              object-t           klass:     nullptr,
              const signature-t* signature: nullptr,
              str-t              src-file:  nullptr,
              int-t              src-line:  0) -> object-t {
    self = $init(super, #src-file: src-file, #src-line: src-line);
    self.object =    object;
    self.klass =     klass;
    self.signature = signature;
    return self;
  }
  method print(object-t self, object-t out) -> object-t {
    if (out == nullptr || out == null)
      out = std-error;
    $print(super, out);
    if (self.object) {
      str-t instance-name;
      if ($instance-of?(self.object, klass::_klass_))
        instance-name = name-of(self.object);
      else
        instance-name = $str(self.object);
      object-t kls;
      if (self.klass)
        kls = superklass-of(self.klass);
      else
        kls = klass-of(self.object);
      $print-format(out, ", \"instance\": \"%s\", \"klass\": \"%s\"",
                    instance-name,
                    name-of(kls));
    }
    if (self.signature)
      $print-format(out, ", \"method\": \"%s(%s)\"",
                    self.signature->name,
                    self.signature->param-types);
    return self;
  }
}
