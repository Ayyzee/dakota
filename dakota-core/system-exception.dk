# include <cassert>
# include <cerrno>
# include <cstring>

# include "private.hh"

module dakota-core;

klass output-stream;
klass str128;

klass system-exception {
  superklass exception;

  slots {
    fnd-int-t    errnum;
    str-t    name;
    str128-t strerror;
  }
  method init(object-t self,
              fnd-int-t    errnum:,
              str-t    src-file: nullptr,
              fnd-int-t    src-line: 0) -> object-t {
    self = $init(super, #src-file: src-file, #src-line: src-line);
    assert(0 != errnum);
    self.errnum = errnum;
    self.name = strerror-name(self.errnum);
    strerror-r(self.errnum, self.strerror, sizeof(self.strerror));
    return self;
  }
  method print(object-t self, object-t out) -> object-t {
    if (out == nullptr || out == null)
      out = std-error;
    $print(super, out);
    $print-format(out, ": errno=%s (\"%s\")\n",
                  self.name, self.strerror);
    return self;
  }
}
