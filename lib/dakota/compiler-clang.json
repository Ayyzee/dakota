# -*- mode: cperl -*-
# -*- cperl-close-paren-offset: -2 -*-
# -*- cperl-continued-statement-offset: 2 -*-
# -*- cperl-indent-level: 2 -*-
# -*- cperl-indent-parens-as-block: t -*-
# -*- cperl-tab-always-indent: t -*-
{
  'CXX' => [ 'clang++' ],
  # clang does not understand --visibility=, --dollars-in-identifiers, nor --non-call-exceptions
  'CXXFLAGS' => [ '-std=c++11', '-fvisibility=hidden', '-fdollars-in-identifiers', '-fnon-call-exceptions' ],
  'CXX_COMPILE_FLAGS' =>     [ '--compile', '-emit-llvm' ],
  # clang does not understand --PIC
  'CXX_COMPILE_PIC_FLAGS' => [ '--compile', '-emit-llvm', '-fPIC' ],
  'CXX_DYNAMIC_FLAGS' =>     [ '--dynamic' ],
  'CXX_INCLUDE_DIRECTORY_FLAGS' => [ '--include-directory' ],
  'CXX_NO_WARNINGS_FLAGS' => [ '--no-warnings' ],
  'CXX_OUTPUT_FLAGS' =>      [ '--output'  ],
  'CXX_SHARED_FLAGS' =>      [ '--shared'  ],
  'EXTRA_CXXFLAGS' =>        [
      '-Weverything',
      '-Wno-c++98-compat',
      '-Wno-c++98-compat-pedantic',
      '-Wno-c99-extensions', # c99 designated initializers, c99 compound literals
      '-Wno-cast-align',
      '-Wno-disabled-macro-expansion',
      '-Wno-dollar-in-identifier-extension',
      '-Wno-exit-time-destructors',
      '-Wno-four-char-constants',
      '-Wno-global-constructors',
      '-Wno-multichar',
      '-Wno-old-style-cast',
      '-Wno-padded',
      ],
  'LD_SONAME_FLAGS' => [ '-soname' ],
  'cc_ext' => 'cc',
  'dkcc_ext' => 'dkcc',
  'dkhh_ext' => 'dkhh',
  'hh_ext' => 'hh',
  'o_ext' =>  'bc',
  'so_ext' => 'so',
}
