# -*- mode: cperl -*-
# -*- cperl-close-paren-offset: -2 -*-
# -*- cperl-continued-statement-offset: 2 -*-
# -*- cperl-indent-level: 2 -*-
# -*- cperl-indent-parens-as-block: t -*-
# -*- cperl-tab-always-indent: t -*-
{
  'DK_CXX' => [ 'clang++' ],
  'DK_CXXFLAGS' => [ '-std=c++11' ],
  'DK_CXX_COMPILE_FLAGS' =>     [ '--compile', '-emit-llvm' ],
  'DK_CXX_COMPILE_PIC_FLAGS' => [ '--compile', '-emit-llvm', '-fPIC' ], # clang does not understand --PIC
  'DK_CXX_DYNAMIC_FLAGS' =>     [ '--dynamic' ],
  'DK_CXX_NO_WARNINGS_FLAGS' => [ '--no-warnings' ],
  'DK_CXX_OUTPUT_FLAGS' =>      [ '--output'  ],
  'DK_CXX_SHARED_FLAGS' =>      [ '--shared'  ],
  'DK_CXX_WARNINGS_FLAGS' =>    [
      '-Weverything',
      '-Wno-c99-extensions', # c99 designated initializers, c99 compound literals
      '-Wno-c++98-compat-pedantic',
      '-Wno-c++98-compat',
      '-Wno-cast-align',
      '-Wno-disabled-macro-expansion',
      '-Wno-exit-time-destructors',
      '-Wno-four-char-constants',
      '-Wno-global-constructors',
      '-Wno-multichar',
      '-Wno-old-style-cast',
      '-Wno-padded',
      ],
  'DK_LD_SONAME_FLAGS' => [ '-install_name' ], # unique to darwin
  'hh_ext' => 'hh',
  'cc_ext' => 'cc',
  'o_ext' =>  'bc',
  'so_ext' => 'dylib', # unique to darwin
  'cxx_debug_symbols_ext' => 'dSYM', # unique to darwin
}
