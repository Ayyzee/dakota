#include <cassert>
#include <cinttypes>
#include <cstring>

#include "dakota-safe-str.hh"
#include "dakota-private.hh"

module dakota-util;

// same code as in klass string (badbad)
klass object-output-stream;

klass cstring {
  slots {
    char8-t* ptr;
    uint32-t len;
    uint32-t capacity;
  }
  method object-t init(object-t self, uint32-t capacity : 8) {
    self = $init(super);
    self.ptr = cast(char8-t*)dkt::alloc(sizeof(char8-t) * capacity);
    self.ptr[0] = NUL;
    self.len = 0;
    self.capacity = capacity;
    return self;
  }
  method object-t dealloc(object-t self) {
    dkt::dealloc(self.ptr);
    object-t result = $dealloc(super);
    return result;
  }
  method object-t write-slots(object-t self, object-t out) {
    $write-slots(super, out);
    $write-slots-start(out, klass);

    $write-element(out, self.ptr, "ptr");
    $write-element(out, self.len, "len");
    $write-element(out, self.capacity, "capacity");

    $write-slots-end(out);
    return self;
  }
  method slots-t* dump(slots-t* s) {
  //$dump(super);
    fprintf(stderr, "%p:%p { ptr=\"%s\", len=%u, capacity=%u }\n",
            cast(void*)nullptr, cast(void*)(s), s->ptr, s->len, s->capacity);
    return s;
  }
  method int-t compare(slots-t* s, slots-t* other-s) {
    int-t result = safe-strcmp(s->ptr, other-s->ptr);
    result = dkt-normalize-compare-result(result);
    return result;
  }
  unused static int-t compare(slots-t** s, slots-t** other-s) {
    int-t result = compare(*s, *other-s);
    return result;
  }
  method int-t compare(object-t self, object-t other) {
    int-t result;

    if ($instance?(other, klass)) {
      slots-t* s1 = unbox(self);
      slots-t* s2 = unbox(other);
      result = compare(s1, s2);
    } else {
      result = $compare(super, other);
    }
    result = dkt-normalize-compare-result(result);
    return result;
  }
  method uint32-t length(slots-t* s) {
    if (0    == s->len &&
        nullptr != s->ptr &&
        NUL  != s->ptr[0])
      s->len = cast(uint32-t)safe-strlen(s->ptr);
    return s->len;
  }
  method slots-t* concat(slots-t* s, char8-t c) {
    assert(NUL != c);
    assert(s->len + 1 != s->capacity);
      
    s->ptr[s->len] = c;
    s->len++;
    s->ptr[s->len] = NUL;
    return s;
  }
}
