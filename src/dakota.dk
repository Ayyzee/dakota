func dump-klass(ostream-t ostrm, named-info-t* klass-info) -> void {
  assert(nullptr != ostrm.output);
  assert(8 > ostrm.col);
  assert(nullptr != klass-info);

  symbol-t name = name-from-info(klass-info);
  symbol-t superklass-name = superklass-name-from-info(klass-info);
  symbol-t klass-name = klass-name-from-info(klass-info);

  str-t                     modulee =                        cast(str-t)                    named-info::at(klass-info, #module);
  boole-t                   exported? =                      cast(boole-t)                  named-info::at(klass-info, #exported?);
  boole-t                   state-exported? =                cast(boole-t)                  named-info::at(klass-info, #state-exported?);
  boole-t                   behavior-exported? =             cast(boole-t)                  named-info::at(klass-info, #behavior-exported?);
  symbol-t                  cat =                            cast(symbol-t)                 named-info::at(klass-info, #cat, cast(uintptr-t)#struct);
  symbol-t                  type =                           cast(symbol-t)                 named-info::at(klass-info, #type, cast(uintptr-t)#klass);
  symbol-t                  interpose-name =                 cast(symbol-t)                 named-info::at(klass-info, #interpose-name);
  const symbol-t*           traits =                         cast(const symbol-t*)          named-info::at(klass-info, #traits);
  const symbol-t*           requires =                       cast(const symbol-t*)          named-info::at(klass-info, #requires);
  const symbol-t*           provides =                       cast(const symbol-t*)          named-info::at(klass-info, #provides);
  const signature-t* const* method-signatures =              cast(const signature-t* const*)named-info::at(klass-info, #method.signatures);
  const signature-t* const* kw-args-method-signatures =      cast(const signature-t* const*)named-info::at(klass-info, #kw-args-method-signatures);
  const signature-t* const* exported-method-signatures =     cast(const signature-t* const*)named-info::at(klass-info, #exported-method.signatures);
  const signature-t* const* exported-slots-method-signatures = cast(const signature-t* const*)named-info::at(klass-info, #exported-slots-method.signatures);
  const signature-t* const* slots-method-signatures =        cast(const signature-t* const*)named-info::at(klass-info, #slots-method.signatures);
//const signature-t* const* va-method-signatures =           cast(const signature-t* const*)named-info::at(klass-info, #va-method.signatures);
//const signature-t* const* va-slots-method-signatures =     cast(const signature-t* const*)named-info::at(klass-info, #va-slots-method.signatures);
  const named-enum-info-t*  enum-info =                      cast(const named-enum-info-t*) named-info::at(klass-info, #enum-info);
  const const-info-t*       const-info =                     cast(const const-info-t*)      named-info::at(klass-info, #const-info);
  str-t                     slots-type =                     cast(str-t)                    named-info::at(klass-info, #slots-type);
  str-t                     enum-base =                      cast(str-t)                    named-info::at(klass-info, #enum-base);
  named-info-t*             slots-info =                     cast(named-info-t*)            named-info::at(klass-info, #slots-info);
//     const method-t* method-addresses =          cast(method-t*)named-info::at(klass-info, #method.addresses);
//     const method-t* va-method-addresses =       cast(method-t*)named-info::at(klass-info, #va-method.addresses);
//     const method-t* slots-method-addresses =    cast(method-t*)named-info::at(klass-info, #slots-method.addresses);
//     const method-t* va-slots-method-addresses = cast(method-t*)named-info::at(klass-info, #va-slots-method.addresses);

  assert(nullptr != type);
  assert(nullptr != name);
  assert(!(nullptr != interpose-name && nullptr != superklass-name));

  boole-t verbose = 0;

  if (verbose) {
    if (nullptr == superklass-name)
      superklass-name = default-superklass-name();
    if (nullptr == klass-name)
      superklass-name = default-klass-name();
  } else {
    if (default-superklass-name() == superklass-name)
      superklass-name = nullptr;
    if (default-klass-name() == klass-name)
      klass-name = nullptr;
  }
  if (nullptr != modulee && 0 != safe-strcmp(gbl-current-module, modulee)) {
    ostream::println-format(ostrm, "module %s;\n\n", modulee);
    gbl-current-module = modulee;
  }
  if (exported? || state-exported? || behavior-exported?) {
    ostream::println-format(ostrm, "%s %s {\n", type, name);
    ostream::col-incr(ostrm);

    if (nullptr != interpose-name)
      ostream::println-format(ostrm, "interpose %s;\n", interpose-name);
    if (nullptr != superklass-name)
      ostream::println-format(ostrm, "superklass %s;\n", superklass-name);
    if (nullptr != klass-name)
      ostream::println-format(ostrm, "klass %s;\n", klass-name);
    if (nullptr != traits) {
      uint32-t index = 0;

      while (nullptr != traits[index]) {
        ostream::println-format(ostrm, "trait %s;\n", traits[index]);
        index++;
      }
    }
    if (nullptr != requires) {
      uint32-t index = 0;

      while (nullptr != requires[index]) {
        ostream::println-format(ostrm, "require %s;\n", requires[index]);
        index++;
      }
    }
    if (nullptr != provides) {
      uint32-t index = 0;

      while (nullptr != provides[index]) {
        ostream::println-format(ostrm, "provides %s;\n", provides[index]);
        index++;
      }
    }
    if (nullptr != enum-info) {
      uint32-t i = 0;
      while (nullptr != enum-info[i].info) {
        ostream::println-format(ostrm, "export\n"); // hackhack
        if (nullptr != enum-info[i].name)
          ostream::println-format(ostrm, "enum %s\n", enum-info[i].name);
        else
          ostream::println-format(ostrm, "enum\n");
        ostream::println-format(ostrm, "{\n");
        ostream::col-incr(ostrm);
        uint32-t max-name-width = max-enum-name-width(enum-info[i].info);
        uint32-t j = 0;
        while (nullptr != enum-info[i].info[j].name) {
          ostream::println-format(ostrm, "%-*s = %s,\n",
                       max-name-width,
                       enum-info[i].info[j].name,
                       enum-info[i].info[j].expr);
          j++;
        }
        ostream::col-decr(ostrm);
        ostream::println-format(ostrm, "}\n");
        i++;
      }
    }
    if (nullptr != const-info) {
      uint32-t i = 0;
      while (nullptr != const-info[i].name) {
        ostream::println-format(ostrm, "export\n"); // hackhack
        ostream::println-format(ostrm, "const %s %s = %s;\n",
                                const-info[i].type,
                                const-info[i].name,
                                const-info[i].value);
        i++;
      }
    }
# define DKT-DEBUG-CODEGEN 0
    if (DKT-DEBUG-CODEGEN || state-exported?) {
      if (nullptr != slots-type) {
        ostream::println-format(ostrm, "slots %s;\n", slots-type);
      }
      else-if (nullptr != slots-info) {
        if (nullptr == cat || #struct == cat)
          ostream::println-format(ostrm, "slots {\n");
        else-if (enum-base)
          ostream::println-format(ostrm, "slots %s : %s {\n", cat, enum-base);
        else
          ostream::println-format(ostrm, "slots %s {\n", cat);
        ostream::col-incr(ostrm);
        if (#enum == cat) {
          uint32-t max-type-width = max-slot-name-width(slots-info);
          uint32-t i = 0;
          while (nullptr != slots-info[i].elements) {
            symbol-t slot-name = name-from-info(&slots-info[i]);
            assert(nullptr != slot-name);
            str-t slot-expr-str = cast(str-t)named-info::at(&slots-info[i], #expr-str);
            assert(nullptr != slot-expr-str);
            
            ostream::println-format(ostrm, "%-*s = %s,\n", max-type-width, slot-name, slot-expr-str);
            i++;
          }
        } else {
          uint32-t max-type-width = max-slot-type-width(slots-info);
          uint32-t i = 0;
          while (nullptr != slots-info[i].elements) {
            str-t slot-type =   cast(str-t)named-info::at(&slots-info[i], #type);
            str-t slot-typeid = cast(str-t)named-info::at(&slots-info[i], #typeid);
            USE(slot-typeid);
            assert(nullptr != slot-type);
            symbol-t slot-name = name-from-info(&slots-info[i]);
            assert(nullptr != slot-name);
            // printf("%s::%s, type: %s, typeid: %s\n", name, slot-name, slot-type, slot-typeid);
            str-t slot-expr-str = cast(str-t)named-info::at(&slots-info[i], #expr-str);
            
            if (nullptr != slot-expr-str)
              ostream::println-format(ostrm, "%-*s %s = %s;\n", max-type-width, slot-type, slot-name, slot-expr-str);
            else
              ostream::println-format(ostrm, "%-*s %s;\n", max-type-width, slot-type, slot-name);
            i++;
          }
        }
        ostream::col-decr(ostrm);
        ostream::println-format(ostrm, "}\n");
      } else {
        fprintf(stderr, "%s:%i::error: exported slots without type or info\n", __FILE__, __LINE__);
      }
    } // if (state-exported?
    if ((nullptr != superklass-name || nullptr != klass-name || nullptr != traits || nullptr != requires || nullptr != provides)
        && nullptr != method-signatures) {
      ostream::println-format(ostrm, "\n");
    }
    const signature-t* info;
    uint32-t index = 0;

    if (nullptr != kw-args-method-signatures)
      while (nullptr != (info = kw-args-method-signatures[index++])) {
        fprintf(ostrm.output, "  ");
        ostream-t ostrm0 = {ostrm.output, 0};
        dump-method(ostrm0, info);
      }
    index = 0;
    if (nullptr != method-signatures)
      while (nullptr != (info = method-signatures[index++]))
        dump-method(ostrm, info);

    index = 0;
    if (nullptr != slots-method-signatures)
      while (nullptr != (info = slots-method-signatures[index++]))
        dump-method(ostrm, info);

    index = 0;
    if (nullptr != exported-method-signatures)
      while (nullptr != (info = exported-method-signatures[index++]))
        dump-method(ostrm, info);

    index = 0;
    if (nullptr != exported-slots-method-signatures)
      while (nullptr != (info = exported-slots-method-signatures[index++]))
        dump-method(ostrm, info);

    ostream::col-decr(ostrm);
    ostream::println-format(ostrm, "}\n");
  }
  return;
}
