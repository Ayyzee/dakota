void
register-info-common(named-info-t* ni, ptr-t user-data) { USE(user-data);
  registration-info-t ri {};
  named-info-to-registration-info(ni, &ri);

  assert((nullptr == ri.signatures    && nullptr == ri.selectors   ) ||
         (nullptr != ri.signatures    && nullptr != ri.selectors   ));
  assert((nullptr == ri.signatures-va && nullptr == ri.selectors-va) ||
         (nullptr != ri.signatures-va && nullptr != ri.selectors-va));

  if (nullptr != ri.signatures-va)
    import-selectors(ri.signatures-va, ri.selectors-va);
  if (nullptr != ri.signatures)
    import-selectors(ri.signatures, ri.selectors);
  if (nullptr != ri.imported-klasses)
    import-klasses(ri.imported-klasses-names, ri.imported-klasses);
  if (nullptr != ri.klass-defns)
    export-klasses(ri.klass-defns);
  if (nullptr != ri.interposers)
    add-interposers(ri.interposers);

  return;
}
