static func init-runtime-ds() -> void {
  const uint32-t num-klasses = 256;

  gbl-imported-klasses-table =
    sorted-array::create(num-klasses,
                        cast(uint32-t)sizeof(named-assoc-node::slots-t),
                        cast(std-compare-t)cast(auto (*)(named-assoc-node::slots-t*,
                                                         named-assoc-node::slots-t*) -> int-t)named-assoc-node::compare);
  gbl-klass-defns-table =
    sorted-array::create(num-klasses,
                        cast(uint32-t)sizeof(named-info::slots-t*),
                        cast(std-compare-t)cast(auto (*)(named-info::slots-t**,
                                                         named-info::slots-t**) -> int-t)named-info::compare);
  gbl-interposers-table =
    sorted-array::create(num-klasses,
                        cast(uint32-t)sizeof(property::slots-t),
                        cast(std-compare-t)cast(auto (*)(property::slots-t*,
                                                         property::slots-t*) -> int-t)property::compare);
  gbl-imported-klasses-file-table =
    sorted-array::create(num-klasses,
                        cast(uint32-t)sizeof(symbol-t),
                        cast(std-compare-t)cast(auto (*)(symbol::slots-t*,
                                                         symbol::slots-t*) -> int-t)symbol::compare);
  return;
}
