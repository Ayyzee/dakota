klass ofile {
  slots {
    file-t   output;
    uint32-t col;
  }
  static slots-t
  pad(slots-t s) {
    for (uint32-t i = 0; i < s.col; i++)
      fprintf(s.output, "  "); // two spaces per column :-) [my way]
    return s;
  }
  static slots-t
  format-va-printf(2)
  va-printf(slots-t s, str-t format, va-list-t args) {
    pad(s);
    vfprintf(s.output, format, args);
    return s;
  }
  static slots-t
  format-printf(2)
  printf(slots-t s, str-t format, ...) {
    va-list-t args;
    va-start(args, format);
    va-printf(s, format, args);
    va-end(args);
    return s;
  }
  static slots-t
  fopen(str-t path) {
    slots-t s = { nullptr, 0 };
    s.output = ::fopen(path, "w");
    if (nullptr == s.output)
      std::abort();
    return s;
  }
  static slots-t
  fclose(slots-t s) {
    int n = ::fclose(s.output);
    if (-1 == n)
      std::abort();
    return s;
  }
}
