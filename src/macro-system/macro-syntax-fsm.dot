digraph "macro-syntax-fsm"
{
  label = "\G";
  graph [ rankdir = "LR",
        center = true,
        size = "7.5,10",
          ];
  //node [ shape = circle, label = "" ];
  node [ shape = circle ];

  "00" [ shape = doublecircle ];

  00 -> 10 [ label = "macro ident {" ];
  10 -> 00 [ label = "}" ];

  10 -> 20 [ label = "ident" ];
  20 -> 10 [ label = "=> ident" ];

  10 -> 30 [ label = "{" ];
  20 -> 30 [ label = "{" ];

  30 -> 10 [ label = "... } => { ... }" ];

}
