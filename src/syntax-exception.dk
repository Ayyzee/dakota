# include <cassert>
# include <cstring>

module dakota-util;

klass output-stream;
klass token;

klass syntax-exception {
  superklass exception;

  slots {
    object-t token;
    str-t    filename;
    str-t    message;
  }
  method init(object-t self,
                       object-t token :,
                       str-t    filename :,
                       str-t    message :  __klass__) -> object-t {
    self = $init(super);
    assert(nullptr != token &&
           null != token);
    self.token = token;
    self.filename = filename;
    self.message = message;
    return self;
  }
  method print-shallow(object-t self, object-t out) -> object-t {
    assert(nullptr != out);
    if (null == out)
      out = std-error;
    $print-format(out, "%s:%i:%i: '%s' \"%s\"\n",
                    self.filename, $line(self.token), $column(self.token), $buffer(self.token), self.message);
    return self;
  }
  method print(object-t self, object-t out) -> object-t {
    assert(nullptr != out);
    if (null == out)
      out = std-error;
    $print(super, out);
    $print-shallow(self, out);
    return self;
  }
}
