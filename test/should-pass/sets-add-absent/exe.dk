// -*- mode: Dakota; c-basic-offset: 2; tab-width: 2; indent-tabs-mode: nil -*-

#include <stdio.h>
#include <assert.h>

klass uint32;

static object-t check(object-t kls)
{
  symbol-t name = dk::name(kls);
  printf("%s\n", name);
  object-t i1 = uint32::box(cast(uint32-t)0);
  object-t collection = make(kls);
  uint32-t s1 = dk::size(collection);
  dk::add(collection, i1);
  uint32-t s2 = dk::size(collection);
  dk::add(collection, i1);
  uint32-t s3 = dk::size(collection);
  assert(0 == s1 && 1 == s2 && 1 == s3);
  return collection;
}

static object-t check-throw(object-t kls)
{
  symbol-t name = dk::name(kls);
  printf("%s\n", name);
  object-t i1 = uint32::box(cast(uint32-t)0);
  object-t collection = make(kls);
  uint32-t s1 = dk::size(collection);
  dk::add-absent(collection, i1);
  uint32-t s2 = dk::size(collection);
  try
  { dk::add-absent(collection, i1); }
  catch (...)
  {
    uint32-t s3 = dk::size(collection);
    assert(0 == s1 && 1 == s2 && 1 == s3);
    return collection;
  }
  abort();
}

int-t main()
{
  check(sorted-set::klass);
  check(hashed-set::klass);

  check-throw(sorted-set::klass);
  check-throw(hashed-set::klass);

  return 0;
}
